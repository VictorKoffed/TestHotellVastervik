@model restaurangprojekt.Models.Booking

@{
    ViewData["Title"] = "Booking - Details";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My MVC App</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>

<section class="admin-container">
    <h2 class="admin-title">Detaljer för bokning</h2>

    <div class="admin-table-wrapper">
        <h4>Booking</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">BookingID</dt>
            <dd class="col-sm-10">@Model.BookingID</dd>

            <dt class="col-sm-2">UserID</dt>
            <dd class="col-sm-10">@Model.UserID</dd>

            <dt class="col-sm-2">TableID_FK</dt>
            <dd class="col-sm-10">@Model.TableID_FK</dd>

            <dt class="col-sm-2">RoomID</dt>
            <dd class="col-sm-10">@Model.RoomID</dd>

            <dt class="col-sm-2">ReservedDate</dt>
            <dd class="col-sm-10">@Model.ReservedDate</dd>

            <dt class="col-sm-2">GuestCount</dt>
            <dd class="col-sm-10">@Model.GuestCount</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Tillbaka till listan</a>
    </div>
</section>
