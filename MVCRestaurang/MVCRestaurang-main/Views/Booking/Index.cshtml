@model IEnumerable<restaurangprojekt.Models.Booking>

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My MVC App</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>Alla Bokningar</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

    <section class="admin-product-section">
        <div class="admin-container">
            <h1 class="admin-title">Alla Bokningar</h1>

            <div class="admin-actions">
                <a asp-action="Create" class="admin-btn admin-btn-add">➕ Skapa ny bokning</a>
            </div>

            <div class="admin-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Boknings-ID</th>
                            <th>Användare</th>
                            <th>Bord</th>
                            <th>Rum</th>
                            <th>Datum</th>
                            <th>Gäster</th>
                            <th>Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BookingID</td>
                                    <td>@item.UserID</td>
                                    <td>@item.TableID_FK</td>
                                    <td>@item.RoomID</td>
                                    <td>@item.ReservedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@item.GuestCount</td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <a asp-action="Details" asp-route-id="@item.BookingID" class="admin-btn admin-btn-secondary">Detaljer</a>
                                            <a asp-action="Edit" asp-route-id="@item.BookingID" class="admin-btn admin-btn-warning">Redigera</a>
                                            <a asp-action="Delete" asp-route-id="@item.BookingID" class="admin-btn admin-btn-danger">Radera</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">Inga bokningar hittades.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>
</html>
