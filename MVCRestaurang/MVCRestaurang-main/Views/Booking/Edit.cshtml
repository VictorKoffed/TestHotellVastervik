@model restaurangprojekt.Models.Booking
@{
    ViewData["Title"] = "Booking - Edit";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My MVC App</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>

<section class="admin-container">
    <h2 class="admin-title">Redigera bokning</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="BookingID" />

        <div class="form-group">
            <label asp-for="UserID" class="form-label">Användar-ID</label>
            <input asp-for="UserID" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="TableID_FK" class="form-label">Bordsnummer</label>
            <input asp-for="TableID_FK" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="RoomID" class="form-label">Rumsnummer</label>
            <input asp-for="RoomID" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ReservedDate" class="form-label">Bokningsdatum</label>
            <input asp-for="ReservedDate" class="form-control" type="datetime-local" />
        </div>

        <div class="form-group">
            <label asp-for="GuestCount" class="form-label">Antal gäster</label>
            <input asp-for="GuestCount" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Spara</button>
    </form>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
    </div>
</section>
