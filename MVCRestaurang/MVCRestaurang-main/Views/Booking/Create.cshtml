@model restaurangprojekt.Models.Booking

@{
    ViewData["Title"] = "Booking - Create";
}

<h2>Skapa ny bokning</h2>

<form asp-action="Create" method="post" id="bookingCreateForm">
    <div class="form-group">
        <label asp-for="UserID" class="form-label"></label>
        <input asp-for="UserID" class="form-control" />
        <!-- Tag Helper ger automatiskt: id="UserID" name="UserID" -->
    </div>

    <div class="form-group">
        <label asp-for="TableID_FK" class="form-label"></label>
        <input asp-for="TableID_FK" class="form-control" />
        <!-- Ger id="TableID_FK" name="TableID_FK" -->
    </div>

    <div class="form-group">
        <label asp-for="RoomID" class="form-label"></label>
        <input asp-for="RoomID" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReservedDate" class="form-label"></label>
        <input asp-for="ReservedDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="GuestCount" class="form-label"></label>
        <input asp-for="GuestCount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Skapa</button>
</form>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>
