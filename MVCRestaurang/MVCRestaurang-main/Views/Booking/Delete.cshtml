@model restaurangprojekt.Models.Booking

@{
    ViewData["Title"] = "Booking - Delete";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My MVC App</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>

<section class="admin-container">
    <h2 class="admin-title">Radera bokning</h2>

    <h3>Är du säker på att du vill radera denna bokning?</h3>

    <div class="admin-table-wrapper">
        <dl class="row">
            <dt class="col-sm-2">BookingID</dt>
            <dd class="col-sm-10">@Model.BookingID</dd>

            <dt class="col-sm-2">UserID</dt>
            <dd class="col-sm-10">@Model.UserID</dd>
            <!-- Lägg till fler fält om du vill visa mer info -->
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingID" />
        <button type="submit" class="btn btn-danger">Radera</button>
        <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
    </form>
</section>
