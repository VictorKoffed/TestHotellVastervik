@model restaurangprojekt.Models.DinnerTable

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>Delete Dinner Table</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

    <section class="admin-product-section">
        <div class="admin-container">
            <h1 class="admin-title">Delete Dinner Table</h1>

            <h4 class="admin-warning">⚠️ Are you sure you want to delete this table?</h4>
            <div class="admin-detail">
                <h4>Table ID: @Model.TableID</h4>
                <p><strong>Seats:</strong> @Model.Seats</p>
                <p><strong>Location:</strong> @Model.Location</p>
            </div>

            <div class="admin-action-buttons">
                <form asp-action="DeleteConfirmed" asp-controller="DinnerTable" method="post" style="display:inline;">
                    <input type="hidden" asp-for="TableID" />
                    <button type="submit" class="admin-btn admin-btn-danger">🗑️ Delete</button>
                </form>
                <a asp-action="Index" asp-controller="DinnerTable" class="admin-btn admin-btn-secondary">⬅️ Cancel</a>
            </div>
        </div>
    </section>

</body>
</html>
