@model restaurangprojekt.Models.DinnerTable

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>Redigera Matsalsbord</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

    <section class="admin-product-section">
        <div class="admin-container">
            <h1 class="admin-title">✏️ Redigera Matsalsbord</h1>

            <form asp-action="Edit" asp-controller="DinnerTable" method="post">
                <input type="hidden" name="_method" value="PUT" />
                <input type="hidden" asp-for="TableID" />

                <div class="form-group">
                    <label for="Seats">Antal platser</label>
                    <input type="number" asp-for="Seats" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Location">Plats</label>
                    <input type="text" asp-for="Location" class="form-control" />
                </div>

                <div class="admin-action-buttons">
                    <button type="submit" class="admin-btn admin-btn-primary">💾 Spara</button>
                    <a asp-action="Index" asp-controller="DinnerTable" class="admin-btn admin-btn-secondary">⬅️ Tillbaka till listan</a>
                </div>
            </form>
        </div>
    </section>

</body>
</html>
