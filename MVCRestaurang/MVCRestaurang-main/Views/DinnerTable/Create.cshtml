@model restaurangprojekt.Models.DinnerTable

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>Skapa Matsalsbord</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

    <section class="admin-product-section">
        <div class="admin-container">
            <h1 class="admin-title">➕ Skapa Matsalsbord</h1>

            <form asp-action="Create" asp-controller="DinnerTable" method="post">
                <div class="form-group">
                    <label asp-for="Seats">Antal platser</label>
                    <input type="number" asp-for="Seats" class="form-control" />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Location">Plats</label>
                    <input type="text" asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="admin-action-buttons">
                    <button type="submit" class="admin-btn admin-btn-primary">💾 Skapa</button>
                    <a asp-action="Index" asp-controller="DinnerTable" class="admin-btn admin-btn-secondary">⬅️ Tillbaka till listan</a>
                </div>
            </form>
        </div>
    </section>

</body>
</html>
