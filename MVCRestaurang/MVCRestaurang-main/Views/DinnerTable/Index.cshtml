@model IEnumerable<restaurangprojekt.Models.DinnerTable>

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>Matsalsbord</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

    <section class="admin-product-section">
        <div class="admin-container">
            <h1 class="admin-title">Matsalsbord</h1>

            <div class="admin-actions">
                <a asp-action="Create" asp-controller="DinnerTable" class="admin-btn admin-btn-add">➕ Skapa nytt bord</a>
            </div>

            <div class="admin-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Bordsnummer</th>
                            <th>Antal platser</th>
                            <th>Plats</th>
                            <th>Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var table in Model)
                            {
                                <tr>
                                    <td>@table.TableID</td>
                                    <td>@table.Seats</td>
                                    <td>@table.Location</td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <a asp-action="Details" asp-controller="DinnerTable" asp-route-id="@table.TableID" class="admin-btn admin-btn-secondary">Detaljer</a>
                                            <a asp-action="Edit" asp-controller="DinnerTable" asp-route-id="@table.TableID" class="admin-btn admin-btn-warning">Redigera</a>
                                            <form asp-action="Delete" asp-controller="DinnerTable" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@table.TableID" />
                                                <button type="submit" class="admin-btn admin-btn-danger">Ta bort</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Inga bord hittades.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>
</html>
