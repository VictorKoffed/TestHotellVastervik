@model IEnumerable<restaurangprojekt.Models.Order>

@{
    ViewData["Title"] = "Slutförda Ordrar (Historik)";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Min MVC-app</title>
    <link rel="stylesheet" href="~/css/Order.css" />
</head>

<h1>@ViewData["Title"]</h1>

<a asp-action="Index" class="admin-btn admin-btn-secondary">Tillbaka till Aktiva Ordrar</a>

<div class="admin-table-wrapper">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Ordernummer</th>
                <th>Användar-ID</th>
                <th>Rumsnummer</th>
                <th>Beställningstid</th>
                <th>Totalsumma</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.UserID</td>
                    <td>@order.RoomID</td>
                    <td>@order.OrderTime.ToString("g")</td>
                    <td>@order.TotalSum.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
