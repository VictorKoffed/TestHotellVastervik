<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My MVC App</title>
    <link rel="stylesheet" href="~/css/Order.css" />
</head>

@model restaurangprojekt.Models.Order

@{
    ViewData["Title"] = "Ta bort order";
}

<h2>Bekräfta borttagning</h2>

<div class="alert alert-danger">
    <strong>Är du säker på att du vill ta bort ordern med ID @Model.OrderID?</strong>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.OrderID" />
    <button type="submit" class="btn btn-danger">Ja, ta bort</button>
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>