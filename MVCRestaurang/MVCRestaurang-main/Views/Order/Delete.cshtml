@model restaurangprojekt.Models.Order

@{
    ViewData["Title"] = "Ta bort order";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Min MVC-app</title>
    <link rel="stylesheet" href="~/css/Order.css" />
</head>

<h2 class="delete-title">Bekräfta borttagning</h2>

<div class="alert alert-danger">
    <strong>Är du säker på att du vill ta bort ordern med ordernummer @Model.OrderID?</strong>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.OrderID" />
    <button type="submit" class="admin-btn admin-btn-danger">Ja, ta bort</button>
    <a asp-action="Index" class="admin-btn admin-btn-secondary">Avbryt</a>
</form>
