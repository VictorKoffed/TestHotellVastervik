<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meny</title>
    <link rel="stylesheet" href="~/css/menu.css">

</head>
<body>
<div class="menu-container">
<div class="filter-section">
    <label for="room">Rum</label>
    <select id="room">
        <option value="">Välj Rum</option>
        <option value="101">101</option>
        <option value="102">102</option>
    </select>

    <label for="service">Välj typ av tjänst</label>
    <select id="service">
        <option value="">Välj tjänst</option>
        <option value="Restaurang">Restauraung</option>
        <option value="RoomService">Rumservice</option>
            </select>
</div>
<!-- Kategorival -->
<h2>Meny</h2>
<div class="menu-categories"> 
    <button class="active">Lunch</button>
    <button>Förrätt</button>
   <button>Varmrätt</button>
            <button>Efterrätt</button>
            <button>Drycker</button>


        </div>
        <!-- Menyobjekt -->
        <div class="menu-items">
            <div class="menu-item">
                <div class="image-placeholder">Bild</div>
                <div class="item-details">
                    <h3>Meny objekt 1</h3>
                    <p>
                        Allergiinfo:
                        <select>
                            <option>Ja</option>
                            <option>Nej</option>
                        </select>
                    </p>
                    <p>Vegetariskt: Ja/Nej</p>
                    <div class="quantity-selector">
                        <button>-</button>
                        <span>0</span>
                        <button>+</button>
                    </div>
                </div>
            </div>

            <div class="menu-item">
                <div class="image-placeholder">Bild</div>
                <div class="item-details">
                    <h3>Meny objekt 2</h3>
                    <p>
                        Allergiinfo:
                        <select>
                            <option>Ja</option>
                            <option>Nej</option>
                        </select>
                    </p>
                    <p>Vegetariskt: Ja/Nej</p>
                    <div class="quantity-selector">
                        <button>-</button>
                        <span>0</span>
                        <button>+</button>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-info">
                <h3>Hotell Lyx</h3>
                <p>Strandvägen 12<br>12345 Västervik</p>
                <strong>Hitta hit</strong>
            </div>

            <div class="footer-contact">
                <p><strong>Telefon:</strong> 0490-12345</p>
                <p><strong>Epost:</strong> vastervik@hotmail.se</p>
            </div>

            <!--  Nyhetsbrev -->
            <div class="footer-newsletter">
                <h3>Anmäl dig till vårt nyhetsbrev</h3>
                <form action="#" method="post">
                    <input type="email" placeholder="E-postadress" required>
                    <button type="submit">Skicka</button>
                </form>
            </div>
        </div>
    </footer>

    <!-- Navigeringsmeny Gäst-->
    <nav>
        <div class="logo">
            <img src="~/images/logo.png" alt="Hotell Logo">
            <h1><button id="homeButton" class="home-btn">HOTELL LYX</button></h1>
        </div>
        <ul class="nav-links">
            <li><a asp-controller="Rooms" asp-action="Index">Rum</a></li>
            <li><a asp-controller="Home" asp-action="Menu">Mat & Dryck</a></li>
            <li><a asp-controller="Home" asp-action="Event">Event</a></li>
            <li><a asp-controller="Home" asp-action="Offers">Erbjudanden</a></li>
        </ul>
        <a href="/Login" class="button login-btn">
            <img src="~/images/login.png" alt="Logga in" class="login-icon"> Logga in
        </a>

    </nav>




<script src="~/js/site.js" asp-append-version="true"></script>
 </body>
</html>