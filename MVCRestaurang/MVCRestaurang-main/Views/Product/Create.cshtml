@model restaurangprojekt.Models.Product

@{
    ViewData["Title"] = "Skapa ny produkt";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Min MVC-app</title>
    <link rel="stylesheet" href="~/css/Product.css" />
</head>

<h1>➕ Skapa ny produkt</h1>

<form asp-action="Create">
    <div class="form-group mb-2">
        <label asp-for="ProductName">Produktnamn</label>
        <input asp-for="ProductName" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Category">Kategori</label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Price">Pris (kr)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="form-check mb-2">
        <input asp-for="IsVegetarian" class="form-check-input" />
        <label asp-for="IsVegetarian" class="form-check-label">Vegetarisk</label>
    </div>
    <div class="form-group mb-2">
        <label asp-for="ImageURL">Bild-URL</label>
        <input asp-for="ImageURL" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Beskrivning</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">✅ Skapa</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Tillbaka</a>
</form>
