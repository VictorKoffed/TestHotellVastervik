<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>Alla Produkter</title>
    <link rel="stylesheet" href="~/css/Product.css" />
</head>

<body>

    <section class="admin-product-section">
        <div class="admin-container">
            <h1 class="admin-title">🍽️ Alla Produkter</h1>

            <div class="admin-actions">
                <a asp-action="Create" class="admin-btn admin-btn-add">➕ Lägg till ny produkt</a>
            </div>

            <div class="admin-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Namn</th>
                            <th>Kategori</th>
                            <th>Pris</th>
                            <th>Vegetarisk</th>
                            <th>Bild</th>
                            <th>Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Category</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@(item.IsVegetarian ? "🌱 Ja" : "🍖 Nej")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageURL))
                                    {
                                        <img src="@item.ImageURL" class="admin-img" alt="Produktbild" />
                                    }
                                </td>
                                <td>
                                    <div class="admin-action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.ProductID" class="admin-btn admin-btn-secondary">Detaljer</a>
                                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="admin-btn admin-btn-warning">Redigera</a>
                                        <a asp-action="Delete" asp-route-id="@item.ProductID" class="admin-btn admin-btn-danger">Ta bort</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>
</html>