@model restaurangprojekt.Models.Product

@{
    ViewData["Title"] = "Redigera produkt";
}

<h1>✏️ Redigera @Model.ProductName</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group mb-2">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="form-check mb-2">
        <input asp-for="IsVegetarian" class="form-check-input" />
        <label asp-for="IsVegetarian" class="form-check-label"></label>
    </div>
    <div class="form-group mb-2">
        <label asp-for="ImageURL"></label>
        <input asp-for="ImageURL" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-warning">💾 Spara ändringar</button> |
    <a asp-action="Index" class="btn btn-secondary">⬅️ Tillbaka</a>
</form>
